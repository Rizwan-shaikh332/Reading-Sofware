<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Registration Form</title>

    <!-- Font Icon -->
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .signup {
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 70%;
            max-width: 500px;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            font-weight: bold;
        }

        .form-row {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 12px;
        }

        .form-group {
            width: calc(50% - 15px);
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #555;
        }

        .form-input,
        .select-list select {
            width: 100%;
            padding: 10px;
            border: 1px solid #3498db;
            border-radius: 5px;
            box-sizing: border-box;
            transition: border-color 0.3s;
        }

        .form-input:focus,
        .select-list select:focus {
            border-color: #2980b9;
        }

        .form-radio label {
            margin-right: 15px;
            color: #555;
        }

        .form-text {
            margin-top: 0px;
        }

        .add-info-link {
            color: #3498db;
            text-decoration: none;
            cursor: pointer;
            display: block;
            margin-top: 10px;
            font-size: 14px;
        }

        .add_info {
            display: none;
            margin-top: 15px;
            transition: all 0.3s ease;
        }

        .form-submit {
            background: #3498db;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        .form-submit:hover {
            background: #2980b9;
        }

        .ui-datepicker {
            font-size: 14px;
        }

        /* Updated CSS for radio buttons */
        .form-group .container input[type="radio"] {
            display: none;
        }

        .form-group .container label {
            position: relative;
            padding: 8px 15px;
            cursor: pointer;
            display: inline-block;
            font-size: 14px;
            /* Reduced font size */
            color: #555;
            border: 2px solid #3498db;
            border-radius: 8px;
            transition: 0.4s ease-in-out 0s;
            margin-right: 5px;
            white-space: nowrap;
            /* Added margin to separate radio buttons */
        }

        .form-group .container input[type="radio"]:checked+label {
            background-color: #3498db;
            color: #fff;
        }

        .form-group .container label:hover {
            border-color: #2980b9;
        }


        .form-group .form-flex input[type="radio"] {
            display: none;
        }

        .form-group .form-flex label {
            position: relative;
            padding: 10px 20px;
            cursor: pointer;
            display: inline-block;
            font-size: 14px;
            color: #555;
            border: 2px solid #3498db;
            border-radius: 8px;
            transition: 0.4s ease-in-out 0s;
            margin: 0 4px;
        }

        .form-group .form-flex input[type="radio"]:checked+label {
            background-color: #3498db;
            color: #fff;
        }

        .form-group .form-flex label:hover {
            border-color: #2980b9;
        }

        .flex1 {
            display: flex;
        }
    </style>
</head>

<body>
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <form method="POST" id="signup-form" class="signup-form" onsubmit="handleSubmit(event)">
                    <div class="form-row">
                        <div class="form-group">
				 <label for="first_name">ID</label>
                            <input type="text" class="form-input" name="ID" id="ID" required />
                            <label for="first_name">Full name</label>
                            <input type="text" class="form-input" name="Name" id="Name" required />
                        </div>
                        <div class="form-group">
                            <label for="last_name">Mobile Number</label>
                            <input type="text" class="form-input" name="Mobno" id="Mobno" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group form-icon">
                            <label for="birth_date">Add Date</label>
                            <input type="text" class="form-input" name="AddmissionDate" id="add_date" placeholder="MM-DD-YYYY"
                                readonly />
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="gender">Gender</label>
                                <div class="form-flex">
                                    <div class="flex1">
                                        <input type="radio" name="gender" value="male" id="male" checked="checked" />
                                        <label for="male">Male</label>
                                        <input type="radio" name="gender" value="female" id="female" />
                                        <label for="female">Female</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="phone_number">Licence Number</label>
                                <input type="text" value="MH24 /00" class="form-input" name="LicenceNo" id="lic_number"
                                    required />
                            </div>
                            <div class="form-group">
                                <label for="llr_issue">MDLStatus</label>
                                <div class="container">
                                    <div class="flex1">
                                        <form>
                                            <label>
                                                <input type="radio" name="radio" checked value="ISSUE" />
                                                <span>ISSUE</span>
                                            </label>
                                            <label>
                                                <input type="radio" name="radio" value="NOT-ISSUE" />
                                                <span>NOT-ISSUE</span>
                                            </label>
                                            <label>
                                                <input type="radio" name="radio" value="N/A" />
                                                <span>N/A</span>
                                            </label>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="country">LLR TYPE</label>
                                <div class="select-list">
                                    <select name="country" name="LLRType" id="country" required>
                                        <option value="">Select</option>
                                        <option value="LMV">LMV</option>
                                        <option value="LMV-TR">LMV-TR</option>
                                        <option value="MCWG / LMV">MCWG / LMV</option>
                                        <option value="MCWG / LMV-TR">MCWG / LMV</option>
                                        <option value="ONLY-TRAINING">ONLY-TRAINING</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="country">Add / Fresh</label>
                                <div class="select-list">
                                    <select name="city" name="Type" id="city" required>
                                        <option value="">Select</option>
                                        <option value="ADDITIONAL">ADDITIONAL</option>
                                        <option value="FRESH">FRESH</option>
                                        <option value="ONLY-TRANING">ONLY-TRANING</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-text">
                            <a href="#" class="add-info-link" id="add-info-link">
                                <i class="zmdi zmdi-chevron-right"></i>Additional info
                            </a>
                            <div class="add_info" id="add_info">
                                <div class="form-group">
                                    <label for="totalfee">Total Fees</label>
                                    <input type="text" class="form-input" name="totalfee" id="totalfee" required />
                                </div>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="dipositfee">Deposited Fee</label>
                                        <input type="text" class="form-input" name="dipositfee" id="dipositfee"
                                            onblur="Pendingfee()" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="pendingfee">Pending Fees</label>
                                        <input type="text" class="form-input" name="pendingfee" id="pendingfee"
                                            readonly />
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="Submit" />
                        </div>
                        <!-- Add a Reset button inside the form -->
                        <div class="form-group">
                            <input type="reset" class="form-submit" value="Reset" />
                        </div>

                </form>
            </div>
        </div>
        </div>
    </section>

    <script>
        $(document).ready(function () {
            // Initialize the datepicker
            $("#add_date").datepicker({
                dateFormat: "mm-dd-yy",
                showButtonPanel: true,
                changeMonth: true,
                changeYear: true
            });

            $("#add-info-link").click(function (e) {
                e.preventDefault();
                $("#add_info").toggle();
            });

            $("input[name='radio']").change(function () {
                // Remove the background color from all labels
                $(".form-group .container label").css({
                    "background-color": "",
                    "color": ""
                });

                // Check which radio is selected
                $("input[name='radio']:checked").each(function () {
                    // Change background color for the selected label
                    $(this).closest("label").css({
                        "background-color": "#3498db",
                        "color": "#fff"
                    });
                });

                // Check LLR Issue value
                var llrIssue = $("input[name='radio']:checked").val();

                // Update LLR TYPE and Add / Fresh based on LLR Issue value
                if (llrIssue === 'N/A') {
                    $("#country").val("ONLY-TRAINING");
                    $("#city").val("ONLY-TRANING");
                } else {
                    $("#country").val("");
                    $("#city").val("");
                }
            });

            $("input[name='gender']").change(function () {
                $(".form-group .form-flex label").css({
                    "background-color": "",
                    "color": ""
                });

                $("input[name='gender']:checked").each(function () {
                    $(this).closest("label").css({
                        "background-color": "#3498db",
                        "color": "#fff"
                    });
                });
            });

            $("#signup-form").submit(function (e) {
                e.preventDefault();
                // Handle form submission here
                // You can add your form submission logic
            });
        });

        function Pendingfee() {
            var Totalfee = document.getElementById('totalfee').value;
            var Dipositfee = document.getElementById('dipositfee').value;

            // Parse input values to integers
            var totalfeeValue = parseInt(Totalfee, 10);
            var dipositfeeValue = parseInt(Dipositfee, 10);

            // Check if the parsed values are valid numbers
            if (!isNaN(totalfeeValue) && !isNaN(dipositfeeValue)) {
                var pending = totalfeeValue - dipositfeeValue;

                // Update pendingfee based on the calculated value
                if (pending > 0) {
                    document.getElementById('pendingfee').value = pending;
                } 
                else if(pending < 0){
                    document.getElementById('pendingfee').value = "ENTER A PROPER VALUE";
                }
                else {
                    document.getElementById('pendingfee').value = "0000";
                }
            } else {
                // Handle the case where input values are not valid numbers
                document.getElementById('pendingfee').value = "Invalid input";
            }
        }
function handleSubmit(event) {
        event.preventDefault(); // Prevent the default form submission

        const formData = new FormData(event.target); // Get form data
        const data = Object.fromEntries(formData.entries()); // Convert FormData to object

        console.log(data); // Log the form data before submission
        event.target.submit();

 }

    </script>
</body>

</html>