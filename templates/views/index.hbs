        /* Popup Form Styles */
        .popup-form {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            z-index: 999;
            width: 400px;
            text-align: center;
            font-size: 18px;
        }

        .popup-form .popup-header {
            margin-bottom: 20px;
        }

        .popup-form label {
            display: block;
            margin-bottom: 15px;
        }

        .popup-form input {
            width: calc(100% - 20px);
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
            box-sizing: border-box;
        }

        .popup-form button {
            width: calc(100% - 20px);
            padding: 15px;
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-size: 18px;
            box-sizing: border-box;
        }

        .popup-form button:hover {
            background-color: #2980b9;
        }

        .popup-image {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 20px;
        }


